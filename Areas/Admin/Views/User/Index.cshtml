@using EnglishLearning.Models.EF;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    int dem = 1;
    var lstUser = ViewBag.User as List<User>;
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">Danh sách người dùng</h4>
    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap">
            <table class="table" id="tblData">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Họ và tên</th>
                        <th>Ngày sinh</th>
                        <th>Giới tính</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in lstUser)
                    {
                        <tr>
                            <td>@dem</td>
                            <td>@item.Fullname</td>
                            <td>@item.Birthday.Value.ToString("dd/MM/yyyy")</td>
                            <td>@item.Sex</td>
                            <td>@item.Email</td>
                            <td>@item.Phone</td>
                            <td>
                                @if (item.Status == true)
                                {
                                    <button class="btn btn-primary btnStatus" data-id="@item.ID" title="Khóa khách hàng">Active</button>
                                }
                                else
                                {
                                    <button class="btn btn-default btnStatus" data-id="@item.ID" title="Kích hoạt khách hàng">Block</button>
                                }
                            </td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

@section jsAdmin{

    <script type="text/javascript">
        $(function () {
            $('#tblData').DataTable();
            //nếu không có thao tác gì thì ẩn đi
            $('#AlertBox').removeClass('hide');

            //Sau khi hiển thị lên thì delay 1s và cuộn lên trên sử dụng slideup
            $('#AlertBox').delay(2000).slideUp(500);


            $('.btnStatus').off('click').on('click', function () {

                $.ajax({
                    data: { ID: $(this).data('id') },
                    url: '/Admin/User/changeStatus',
                    dataType: 'Json',
                    type: 'POST',
                    success: function (res) {
                        if (res.status == true) {
                            window.location.href = "/admin/user";
                            PNotify.success({
                                title: 'THÔNG BÁO!!',
                                text: 'Cập nhật trạng thái thành công.'
                            });
                        }
                    }
                });

            });




    </script>

}
